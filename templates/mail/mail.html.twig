{% trans_default_domain 'mail' %}

<h3>{{ subject }}</h3>

<p>Bonjour {{ user.firstname }} {{ user.lastname }}</p>

{{ type_notification }}
{% if type_notification == 'user.account' %}
    <p>{{ 'user.account.message'|trans }}</p>
{% elseif type_notification == 'user.card.added' %}
    <p>{{ 'user.card.added'|trans({'%number_card%': card.getCompleteCode()}) }}</p>
{% elseif type_notification == 'user.card.deactivated' %}
    <p>{{ 'user.card.deactivated'|trans({'%number_card%': card.getCompleteCode()}) }}</p>
{% elseif type_notification == 'card.activity' %}
    <p>{{ 'card.new.activity'|trans({'%activity%': cardActivity.activity}) }}</p>
{% elseif type_notification == 'store.activity' %}
    <p>{{ 'store.new.activity'|trans({'%activity%': cardActivity.activity}) }}</p>
{% elseif type_notification == 'card.fidelity_points' %}
    <p>{{ 'card.fidelity_points.changed'|trans(
            {'%ancien_points%': ancientPoints, '%new_points%': card.fidelityPoints}
        ) }}</p>
{% endif %}

<a href="{{ path('home') }}">{{ 'goto.site'|trans }}</a>