{% extends 'base.html.twig' %}
{% block title %} Inscription - {{ parent() }}{% endblock %}
{% block body %}
    <div class="container mt-5">
        <h3>S'inscrire</h3>
        {{ form_start(form) }}
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_row(form.lastname) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_row(form.firstname) }}
                </div>
            </div>
            <div class="form-row">
                <div class="col-12">
                    {{ form_row(form.email) }}
                </div>

                <div class="form-group col-md-6">
                    {{ form_row(form.plainPassword) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    {{ form_row(form.numberStreet) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_row(form.nameStreet) }}
                </div>
                <div class="form-group col-md-3">
                    {{ form_row(form.zipCode) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    {{ form_row(form.city) }}
                </div>
                <div class="form-group col-md-6">
                    {{ form_row(form.country) }}
                </div>
            </div>



{#{{ form_row(form.has_card) }} #}


    <div class="text-right">
        <button type="submit" class="btn btn-success">
            Enregistrer
        </button>
        <a href="{{ path('home') }}" class="btn btn-outline-primary">
            Retour
        </a>
    </div>

    {{ form_end(form) }}
    </div>

{% endblock %}



