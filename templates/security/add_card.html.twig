

{% block body %}
    <h1 class="text-center">Rattacher une nouvelle carte</h1>

    {{ form_start(form, {'attr' : {'id': 'add-card'}}) }}
    <div id="message" class="alert alert-{{ typeMessage }} d-none">{{ message }}</div>
    <div class="form-row d-flex justify-content-center">
        <div class="form-group col-md-12 ">
            {{ form_label(form.card_number) }}
            {{ form_widget(form.card_number) }}
        </div>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-block btn-lg btn-success" id="btn-add-customer-card">
            Enregistrer
        </button>
    </div>
    {{ form_end(form) }}
{% endblock %}