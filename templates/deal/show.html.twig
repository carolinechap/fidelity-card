{% extends 'base.html.twig' %}

{% block title %}Deal{% endblock %}

{% block body %}
    <h1>Deal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ deal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ deal.name }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ deal.startDate ? deal.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ deal.endDate ? deal.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ deal.description }}</td>
            </tr>
            <tr>
                <th>CostPoint</th>
                <td>{{ deal.costPoint }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('deal_index') }}">back to list</a>

    <a href="{{ path('deal_edit', {'id': deal.id}) }}">edit</a>

    {{ include('deal/_delete_form.html.twig') }}
{% endblock %}
