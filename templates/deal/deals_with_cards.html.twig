{% extends 'base.html.twig' %}

    {% block title %}Offres{% endblock %}

    {% block body %}
        <div class="container container-admin ml-sm-auto col-md-7 col-lg-7 px-md-2 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Offres</h1>
            </div>
            <div class="table-responsive table-hover">
                <table class="table table-striped table-sm">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col" class="text-center">Name</th>
                        <th scope="col" class="text-center">Date de début</th>
                        <th scope="col" class="text-center">Date de fin</th>
                        <th scope="col" class="text-center">Description</th>
                        <th scope="col" class="text-center">Points de fidélité à dédurie</th>
                        <th scope="col" class="text-center"></th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for deal in deals %}
                            {% set in_card = false %}
                            {% set fidelity_points = 0 %}
                            {% set number_card = null %}
                            {% if cards is defined %}
                                {% for card in cards %}
                                    {% set in_card = deal in card.deals ? true : false %}
                                    {% set fidelity_points = card.fidelityPoint %}
                                    {% set number_card = card.customerCode %}
                                {% endfor %}
                            {% elseif card is defined %}
                                {%  set in_card = deal in card.deals ? true : false %}
                                {% set fidelity_points = card.fidelityPoint %}
                                {% set number_card = card.customerCode %}
                            {% endif %}
                        <tr>
                            <td scope="row" class="text-center">{{ deal.name }}</td>
                            <td scope="row" class="text-center">{{ deal.startDate ? deal.startDate|date('d/m/Y') : '' }}</td>
                            <td scope="row" class="text-center">{{ deal.endDate ? deal.endDate|date('d/m/Y') : '' }}</td>
                            <td scope="row" class="text-center">{{ deal.description|length > 30 ? deal.description|slice(0, 25) ~ '...' : deal.description  }}</td>
                            <td scope="row" class="text-center">{{ deal.costPoint }}</td>
                            <td width="300">
                                <a href="{{ path('deal_show', {'id' : deal.id}) }}" class="btn btn-danger">
                                    Voir
                                </a>
                                {% if in_card == false %}
                                    <a href="{{ path('deal_add_card', {'deal' : deal.id}) }}" class="btn btn-primary">
                                        Ajouter
                                    </a>
                                {% else %}
                                    Déjà ajouté !
                                    Reste {{ fidelity_points }} points sur la carte {{ number_card }}
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">Aucune offre</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endblock %}
