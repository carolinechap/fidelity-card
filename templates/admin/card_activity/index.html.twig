{% extends 'base.html.twig' %}

    {% block title %}Cartes de fidélité{% endblock %}

    {% block body %}
        {% include('admin/menu.html.twig') %}
        <div class="container container-admin ml-sm-auto col-md-7 col-lg-7 px-md-2 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Activités Client</h1>
            </div>

            <a href="{{ path('card_activity_new') }}"
               class="btn btn-outline-primary mb-3">
                Ajouter un jeu client
            </a>
            <div class="table-responsive table-hover">
                <table class="table table-striped table-sm">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col" class="text-center">Joueur</th>
                        <th scope="col" class="text-center">Nom du jeu</th>
                        <th scope="col" class="text-center">Score personnel</th>
                        <th scope="col" class="text-center">Date du jeu</th>
                        <th scope="col" class="text-center">Gagnant</th>
                        <th scope="col" class="text-center">Point de fidélité minimum gagné</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ca in cardActivities %}
                        <tr class=" {% if ca.id == lastRec.0.id %} bg-secondary {% endif %}">
                            <td class="text-center" {% if ca.id == lastRec.0.id %}style="color:white" {% endif %}>{{ ca.card.user.fullName }}</td>
                            <td class="text-center" {% if ca.id == lastRec.0.id %}style="color:white" {% endif %}>{{ ca.activity.gameName }}</td>
                            <td scope="row" class="text-center" {% if ca.id == lastRec.0.id %}style="color:white" {% endif %}>{{ ca.personalScore }}</td>
                            <td class="text-center" {% if ca.id == lastRec.0.id %}style="color:white" {% endif %}>{{ ca.gameDate  | date('d/m/Y')}}</td>
                            <td class="text-center" {% if ca.id == lastRec.0.id %}style="color:white" {% endif %}>{% if ca.isTheWinner == 1  %} Match gagné {% else %} Match perdu {% endif %}</td>
                            <td class="text-center" {% if ca.id == lastRec.0.id %}style="color:white" {% endif %}>{{ ca.activity.fidelityPoint }}</td>
                            <td width="250">
                                <a href="{{ path('card_activity_new', {'id' : ca.id}) }}" class="btn btn-sm btn-warning">
                                    Modifier
                                </a>
                                <a href="{{ path('card_activity_delete', {'id' : ca.id}) }}" class="btn btn-sm btn-danger">
                                    Supprimer
                                </a>
                                <a href="{{ path('card_activity_historical', {'id' : ca.card.user.id}) }}" class="btn btn-sm btn-secondary">
                                    Voir
                                </a>
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
            <div class="pagination justify-content-center">
                {{ knp_pagination_render(cardActivities) }}
            </div>
        </div>


    {% endblock %}
