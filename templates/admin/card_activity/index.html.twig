{% extends 'base.html.twig' %}

    {% block title %}Cartes de fidélité{% endblock %}

    {% block body %}
        {% include('admin/menu.html.twig') %}
        <div class="container container-admin ml-sm-auto col-md-7 col-lg-7 px-md-2 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Activités Client</h1>
            </div>

            <a href="{{ path('card_activity_new') }}"
               class="btn btn-outline-primary mb-3">
                Ajouter un jeu client
            </a>
            <div class="table-responsive table-hover">
                <table class="table table-striped table-sm">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Joueur</th>
                        <th scope="col">Nom du jeu</th>
                        <th scope="col">Score personnel</th>
                        <th scope="col">Date du jeu</th>
                        <th scope="col">Gagnant</th>
                        <th scope="col">Point de fidélité</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ca in cardActivities %}
                        <tr>

                            {% for card in ca.card  %}

                                {% for user in ca.card.user %}
                                    <td>{{ user.fullName }}</td>
                                {% endfor %}

                            {% endfor %}

                            {% for activity in ca.activity  %}
                               <td>{{ activity.gameName }}</td>
                            {% endfor %}

                            <td scope="row">{{ ca.personalScore }}</td>
                            <td>{{ ca.gameDate  | date('d/m/Y')}}</td>
                            <td>{% if ca.isTheWinner == 1  %} Match gagné {% else %} Match perdu {% endif %}</td>

                            <td width="250">
                                <a href="{{ path('card_activity_new', {'id' : ca.id}) }}" class="btn btn-warning">
                                    Modifier
                                </a>
                                <a href="{{ path('card_activity_delete', {'id' : ca.id}) }}" class="btn btn-danger">
                                    Supprimer
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>


    {% endblock %}
