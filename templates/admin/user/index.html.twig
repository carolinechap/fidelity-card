{% extends 'base.html.twig' %}

{% block title %}Clients  - {{ parent() }}{% endblock %}

{% block body %}
    {% include('admin/menu.html.twig') %}
    <div class="container container-admin ml-sm-auto col-md-7 col-lg-7 px-md-2 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Liste des clients</h1>
        </div>
        <div class="card bg-light mb-3">
            <div class="card-body">
                {{ form_start(search_form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(search_form.lastname) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(search_form.firstname) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {{ form_row(search_form.email) }}
                    </div>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-outline-secondary">
                        Rechercher
                    </button>
                </div>
                {{ form_end(search_form) }}
            </div>
        </div>
        <div class="table-responsive table-hover">
            <table class="table table-striped table-sm">
                <thead class="thead-dark">
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Pr√©nom</th>
                    <th scope="col">Email</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('admin_user_show', {'id' : user.id}) }}" class="btn btn-sm btn-secondary">
                                Voir
                            </a>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="pagination justify-content-center">
            {{ knp_pagination_render(users) }}
        </div>

    </div>

{% endblock %}