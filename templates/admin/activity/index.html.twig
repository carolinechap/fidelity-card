{% extends 'base.html.twig' %}

    {% block title %}Activité  - {{ parent() }}{% endblock %}

    {% block body %}
        {% include('admin/menu.html.twig') %}
        <div class="container container-admin ml-sm-auto col-md-7 col-lg-7 px-md-2 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Activités du laser game</h1>
            </div>

            <a href="{{ path('activity_new') }}"
               class="btn btn-outline-primary mb-3">
                Ajouter un jeu
            </a>
            <div class="table-responsive table-hover">
                <table class="table table-striped table-sm">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Points de fidélité attribuables</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for activity in activities %}
                        <tr>
                            <th scope="row">{{ activity.gameName }}</th>
                            <td scope="row">{{ activity.fidelityPoint }}</td>
                            <td width="250">
                                <a href="{{ path('activity_edit', {'id' : activity.id}) }}" class="btn btn-warning">
                                    Modifier
                                </a>
                                <a href="{{ path('activity_delete', {'id' : activity.id}) }}" class="btn btn-danger">
                                    Supprimer
                                </a>

                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>


    {% endblock %}
