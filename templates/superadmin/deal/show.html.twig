{% extends 'base.html.twig' %}

    {% block title %}Offres{% endblock %}

    {% block body %}
        {% include('admin/menu.html.twig') %}
        <div class="container container-admin ml-sm-auto col-md-7 col-lg-7 px-md-2 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Offres commerciales</h1>
            </div>

            <a href="{{ path('deal_index') }}"
               class="btn btn-outline-primary mb-3">
                Retour vers la liste
            </a>

            <div class="card">
                <h5 class="card-header text-center">{{ deal.name }}</h5>
                <div class="card-body">
                    <p class="card-title text-muted">Valide {{ deal.startDate ? deal.startDate|date('d/m/Y') : '' }} au {{ deal.endDate ? deal.endDate|date('d/m/Y') : '' }}</p>
                    <p class="card-text">{{ deal.description }}</p>
                    <p class="card-text">Points de fidélité nécessaires : <span class="font-weight-bold">{{ deal.costPoint }}</span> pts </p>
                    <div class="d-flex justify-content-end">
                        <a href="{{ path('deal_delete', {'id' : deal.id}) }}" class="btn btn-danger">
                            Supprimer
                        </a>
                    </div>
                </div>
            </div>
        </div>


    {% endblock %}

