{% extends 'base.html.twig' %}

{% block title %}Edition des offres{% endblock %}

{% block body %}
    {% include('admin/menu.html.twig') %}
    <div class="container container-admin ml-sm-auto col-md-7 col-lg-7 px-md-2 px-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Offres commerciales</h1>
        </div>
        {{ form_start(form, {'action': path('crud_new', {'class': class }), 'method': 'POST'}) }}
        <div class="form-row">
            <div class="form-group col-md-9">
                {{ form_row(form.name) }}
            </div>
            <div class="form-group col-md-3">
                {{ form_row(form.costPoint) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                {{ form_row(form.startDate) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_row(form.endDate) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                {{ form_row(form.description) }}
            </div>
        </div>

        <div class="text-right">
            <button type="submit" class="btn btn-primary">
                Enregistrer
            </button>
            <a href="{{ path('crud_index', {'class' : class}) }}"
               class="btn btn-outline-secondary">
                Retour
            </a>
        </div>
        {{ form_end(form) }}
    </div>


{% endblock %}