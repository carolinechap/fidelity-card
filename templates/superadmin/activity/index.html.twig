{% extends 'base.html.twig' %}

    {% block title %}Cartes de fidélité{% endblock %}

    {% block body %}
        {% include('admin/menu.html.twig') %}
        <div class="container container-admin ml-sm-auto col-md-7 col-lg-7 px-md-2 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Activités du laser game</h1>
            </div>

            <a href="{{ path('crud_new', { 'class': class }) }}"
               class="btn btn-outline-primary mb-3">
                Ajouter un jeu
            </a>
            <div class="table-responsive table-hover">
                <table class="table table-striped table-sm">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col" class="text-center">Nom</th>
                        <th scope="col" class="text-center">Points de fidélité attribuables</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <th scope="row" class="text-center">{{ entity.gameName }}</th>
                            <td scope="row" class="text-center">{{ entity.fidelityPoint }}</td>
                            <td width="250">
                                <div class="d-flex justify-content-center">
                                    <a href="{{ path('crud_edit', {'id': entity.id, 'class': class }) }}" class="btn btn-sm btn-warning mx-2">
                                        Modifier
                                    </a>
                                    {{ include('superadmin/crud/_delete_form.html.twig', {'class': class }) }}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>


    {% endblock %}
