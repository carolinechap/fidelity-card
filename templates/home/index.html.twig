{% extends 'base.html.twig' %}

{% block title %}HomePage!{% endblock %}

{% block body %}

    <div class="container-fluid bg-img  {% if app.user is null %}d-flex justify-content-center align-items-center {% endif %}">
{% if app.user %}
    {% if is_granted('ROLE_USER') %}
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-6 col-md-3">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title">Mon historique de jeu</h5>
                            <p class="card-text">Ici tu accederas à toutes tes informations concernant tes parties au Laser Game!</p>
                            <a href="{{ path('card_activity_historical') }}" class="card-link btn btn-secondary">Voir</a>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-3">
                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title">Mes deals</h5>
                            <p class="card-text"></p>
                            <a href="#" class="card-link btn btn-secondary">Voir</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive table-hover">
                <table class="table table-striped table-sm">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nom du joueur</th>
                        <th scope="col" class="text-center">Score</th>
                        <th scope="col" class="text-center">Nb de victoire / nb de jeu joué</th>
                        <th scope="col" class="text-center">Lasergame préféré</th>

                    </tr>
                    </thead>
                    <tbody id="results">

                    </tbody>
                </table>
            </div>




        </div>

        {% endif %}
        {% else %}
            <div class="container">
            <div class="card bg-light mb-3 connection-card">
                <div class="card-body">
                    <a class="btn btn-dark btn-lg btn-block" href="{{ path('signup_route') }}">S'incrire</a>
                    <a class="btn btn-secondary btn-lg btn-block" href="{{ path('login_route') }}">Se connecter</a>
                </div>
            </div>
            </div>
        {% endif %}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
<script>

</script>
{% endblock %}